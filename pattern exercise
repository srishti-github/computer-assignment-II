# computer-assignment-II
PROGRAMS
1.	Star pattern programs - Write a C program to print the given star patterns.
Pyramid Star Pattern
#include <stdio.h>

void main()
{
   int n,i,j,k;
   printf("enter the number of rows:");
   scanf("%d",&n);
   for(i=0;i<=n;i++)
   {
       for(j=i;j<n;j++)
       {
           printf(" ");
       }
       for(k=1;k<=(2*i-1);k++)
       {
           printf("*");
       }
       printf("\n");
   }
}
Hollow Pyramid Star Pattern
#include <stdio.h>

void main()
{
   int n,i,j,k;
   printf("enter the number of rows:");
   scanf("%d",&n);
   for(i=1;i<=n;i++)
   {
       for(j=i;j<n;j++)
       {
           printf(" ");
       }
       for(k=1;k<=(2*i-1);k++)
       {
         if(i==n || k==1 || k==(2*i-1))
         {
             printf("*");
         }
         else
         {
             printf(" ");
         }
       }
       printf("\n");
   }
}
Inverted Pyramid Star
#include <stdio.h>

void main()
{
    int n,i,j,k;
    printf("enter the number of rows :");
    scanf("%d",&n);
    for(i=n;i>=1;i--)
    {
        for(j=i;j<n;j++)
        {
            printf(" ");
        }
        for(k=1;k<=i;k++)
        {
            printf("* ");
        }
        printf("\n");
    }
   
} 
Hollow Inverted Pyramid Star Pattern
#include <stdio.h>

void main()
{
    int n,i,j,k;
    printf("enter the number of rows:");
    scanf("%d",&n);
    
    for(i=n;i>=1;i--)
    {
        for(j=i;j<n;j++)
        {
            printf(" ");
        }
        for(k=1;k<=(2*i-1);k++)
        {
            if(i==n||k==1||k==(2*i-1))
            {
                printf("*");
            }
            else
            printf(" ");
        }
        printf("\n");
    }
    
    
}
Half Diamond Star Pattern 
#include <stdio.h>

void main()
{
    int n,i,j;
    printf("enter the number of rows:");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    for(i=n;i>=1;i--)
    {
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
   
}
Mirrored Half Diamond Star Pattern
#include <stdio.h>

int main()
{
   int n,i,j,k;
   printf("enterr number of rows: ");
   scanf("%d",&n);
   for(i=1;i<=n;i++)
   {
       for(j=i;j<n;j++)
       {
           printf(" ");
       }
       for(k=1;k<=i;k++)
       {
           printf("*");
       }
       printf("\n");
   }
   
   for(i=n;i>=1;i--)
   {
       for(j=i;j<=n;j++)
       {
           printf(" ");
       }
       for(k=1;k<i;k++)
       {
           printf("*");
       }
       printf("\n");
   }
}
